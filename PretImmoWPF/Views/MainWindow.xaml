<Window x:Class="PretImmoWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:prism="http://prismlibrary.com/"
		prism:ViewModelLocator.AutoWireViewModel="True"
		xmlns:conf="clr-namespace:PretImmoWPF.Config"
        Title="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="800" Width="900">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" DockPanel.Dock="Top" Margin="5" >
			<TextBlock Text="Prêt immo" FontSize="40" />
		</StackPanel>
		
		<ContentControl Grid.Row="1" Margin="5" prism:RegionManager.RegionName="{x:Static conf:RegionNames.MainRegion}" />

	</Grid>
</Window>
