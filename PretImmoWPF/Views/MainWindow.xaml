<Window x:Class="PretImmoWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:prism="http://prismlibrary.com/"
		prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="800" Width="900">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" DockPanel.Dock="Top" Margin="5" >
			<TextBlock Text="Prêt immo" FontSize="40" />
		</StackPanel>

		<Grid Grid.Row="1">
			
			<Grid.RowDefinitions>
				<RowDefinition Height="2*"/>
				<RowDefinition Height="3*"/>
			</Grid.RowDefinitions>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="500"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<ContentControl Grid.Row="0" Margin="5" 
							prism:RegionManager.RegionName="MainRegion" />

			<ContentControl Grid.Row="1" Margin="5"
							prism:RegionManager.RegionName="ActionRegion" 
							prism:RegionManager.RegionContext="{Binding SelectedPret, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

			<ContentControl Grid.Column="1" Grid.RowSpan="2" Margin="5"
							prism:RegionManager.RegionName="DetailsRegion"/>
		</Grid>
	</Grid>
</Window>
